<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fitnessResult.addFitnessResults.AddFitnessResultsActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"

    >
<androidx.constraintlayout.widget.ConstraintLayout

android:layout_width="match_parent"
android:layout_height="match_parent"
    >



<TextView
    android:id="@+id/exercise_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/enter_heart_rate_mssg"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    android:textColor="@color/White"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

<Button
    android:id="@+id/get_desc_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/get_description"
    android:textSize="10sp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="15dp"
    app:layout_constraintTop_toBottomOf="@id/exercise_message"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>