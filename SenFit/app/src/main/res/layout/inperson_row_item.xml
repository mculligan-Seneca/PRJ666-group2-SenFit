<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inperson_row"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/SkyBlue"
    android:layout_margin="8dp"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/inperson_row_image"
        android:layout_width="121dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sen_fit" />

    <TextView
        android:id="@+id/inperson_row_class_name"
        android:layout_width="188dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="Yoga Class"
        app:layout_constraintStart_toEndOf="@+id/inperson_row_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inperson_row_class_date"
        android:layout_width="188dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="2021-01-30"
        app:layout_constraintStart_toEndOf="@+id/inperson_row_image"
        app:layout_constraintTop_toBottomOf="@+id/inperson_row_class_name" />

    <TextView
        android:id="@+id/inperson_row_class_time"
        android:layout_width="188dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="10:30 AM - 11:30 PM"
        app:layout_constraintStart_toEndOf="@+id/inperson_row_image"
        app:layout_constraintTop_toBottomOf="@+id/inperson_row_class_date" />

    <TextView
        android:id="@+id/inperson_row_class_instructor_name"
        android:layout_width="188dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="David"
        app:layout_constraintStart_toEndOf="@+id/inperson_row_image"
        app:layout_constraintTop_toBottomOf="@+id/inperson_row_class_time" />
    <TextView
        android:id="@+id/inperson_row_class_class_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="David"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inperson_row_class_instructor_name"
        app:layout_constraintBottom_toTopOf="@id/inperson_row_class_enroll"/>

    <Button
        android:id="@+id/inperson_row_class_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Enroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inperson_row_class_instructor_name" />

    <TextView
        android:id="@+id/inperson_row_class_enrolled_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:text="Enrolled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inperson_row_class_instructor_name" />



</androidx.constraintlayout.widget.ConstraintLayout>