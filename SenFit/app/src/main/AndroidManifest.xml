<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.senfit">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SenFit">
        <activity android:name=".trainingPlan.EnrollTrainingPlanActivity"></activity>
        <activity
            android:name=".fitnessResult.addFitnessResults.AddFitnessResultsActivity"
            android:label="@string/add_fitness_results" />
        <activity
            android:name=".fitnessPortfolio.addFitnessPortfolio.AddFitnessPortfolioActivity"
            android:label="@string/add_fitness_portfolio" />
        <activity
            android:name=".covidLog.CovidSurveyActivity"
            android:label="@string/title_activity_covid_survey" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
               <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />
        -->
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity android:name=".signup.SignUpActivity" />
        <activity android:name=".ui.home.MyClassesActivity" />
        <activity
            android:name=".ui.inperson.SenFitActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.SenFit.NoActionBar" />
        <activity
            android:name=".bookTour.BookTourActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.SenFit.NoActionBar" />
    </application>

</manifest>